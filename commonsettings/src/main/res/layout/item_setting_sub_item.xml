<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteLight"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/setting_sub_item_padding_vertical"
    android:paddingLeft="@dimen/setting_sub_item_padding_horizontal"
    android:paddingRight="@dimen/setting_sub_item_padding_horizontal"
    android:paddingTop="@dimen/setting_sub_item_padding_vertical">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#212121"
        android:textSize="@dimen/setting_sub_item_text_size"/>

    <ImageView
        android:id="@+id/ivSelectStatus"
        android:layout_width="@dimen/setting_sub_item_iv_size"
        android:layout_height="@dimen/setting_sub_item_iv_size"/>

</LinearLayout>
